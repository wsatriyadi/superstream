<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="icon" type="image/png" href="/favicon.png">
  <title><%= title %></title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
  <link rel="stylesheet" href="/css/custom.css">
</head>
<body>
  <% 
    const activePage = 'videos';
    const pageTitle = 'Video Gallery';
  %>

  <%- include('partials/sidebar', { activePage }) %>

  <div class="main-content">
    <%- include('partials/topbar', { pageTitle, user }) %>

    <div class="content-container">
      <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
          <p class="text-muted mb-0">Upload and manage your video library</p>
        </div>
        <div class="btn-group">
          <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#uploadModal">
            <i class="bi bi-cloud-upload"></i> Upload Video
          </button>
          <button type="button" class="btn btn-primary dropdown-toggle dropdown-toggle-split" data-bs-toggle="dropdown">
            <span class="visually-hidden">Toggle Dropdown</span>
          </button>
          <ul class="dropdown-menu dropdown-menu-end">
            <li><a class="dropdown-item" href="#" data-bs-toggle="modal" data-bs-target="#uploadModal"><i class="bi bi-upload"></i> Upload from Computer</a></li>
            <li><a class="dropdown-item" href="#" data-bs-toggle="modal" data-bs-target="#downloadUrlModal"><i class="bi bi-link-45deg"></i> Download from URL</a></li>
          </ul>
        </div>
      </div>

      <!-- Active Downloads -->
      <div id="activeDownloads" style="display: none;" class="mb-4">
        <div class="card shadow-sm" style="border-radius: 16px; border: none;">
          <div class="card-body">
            <h6 class="mb-3"><i class="bi bi-download"></i> Active Downloads</h6>
            <div id="activeDownloadsList"></div>
          </div>
        </div>
      </div>

      <% if (typeof videos !== 'undefined' && videos.length === 0) { %>
        <div class="card shadow-sm" style="border-radius: 16px; border: none;">
          <div class="card-body">
            <div class="empty-state">
              <div class="empty-state-icon">
                <i class="bi bi-film"></i>
              </div>
              <h3 class="empty-state-title">No Videos Yet</h3>
              <p class="empty-state-text">Upload your first video to start streaming</p>
              <button class="btn btn-primary btn-lg" data-bs-toggle="modal" data-bs-target="#uploadModal">
                <i class="bi bi-cloud-upload"></i> Upload Video
              </button>
            </div>
          </div>
        </div>
      <% } else if (typeof videos !== 'undefined') { %>
        <div class="row g-4">
          <% videos.forEach((video, index) => { %>
            <div class="col-xl-3 col-lg-4 col-md-6">
              <div class="card shadow-sm fade-in" style="border-radius: 16px; border: none; animation-delay: <%= index * 0.05 %>s;">
                <% if (video.thumbnailPath) { %>
                  <img src="<%= video.thumbnailPath %>" class="card-img-top" alt="<%= video.title %>" style="height: 180px; object-fit: cover; border-radius: 16px 16px 0 0;">
                <% } else { %>
                  <div class="d-flex align-items-center justify-content-center" style="height: 180px; background: linear-gradient(135deg, rgba(99, 102, 241, 0.1), rgba(139, 92, 246, 0.1)); border-radius: 16px 16px 0 0;">
                    <i class="bi bi-film" style="font-size: 48px; color: var(--primary-color);"></i>
                  </div>
                <% } %>
                <div class="card-body" style="padding: 20px;">
                  <h6 class="mb-2" style="font-weight: 700; color: var(--dark-bg); overflow: hidden; text-overflow: ellipsis; white-space: nowrap;"><%= video.title %></h6>
                  <p class="text-muted mb-3" style="font-size: 13px; overflow: hidden; text-overflow: ellipsis; display: -webkit-box; -webkit-line-clamp: 2; -webkit-box-orient: vertical;"><%= video.description || 'No description' %></p>
                  
                  <div class="d-flex justify-content-between align-items-center mb-3" style="font-size: 12px;">
                    <span class="text-muted">
                      <i class="bi bi-clock"></i> <%= video.duration ? Math.floor(video.duration / 60) + 'm' : 'N/A' %>
                    </span>
                    <span class="text-muted">
                      <i class="bi bi-arrow-repeat"></i> <%= video.loopCount || 1 %>x
                    </span>
                  </div>

                  <div class="d-flex gap-2">
                    <button class="btn btn-sm btn-outline-primary flex-grow-1 edit-video-btn" data-video-id="<%= video._id %>">
                      <i class="bi bi-pencil"></i> Edit
                    </button>
                    <button class="btn btn-sm btn-outline-danger delete-video-btn" data-video-id="<%= video._id %>" data-video-title="<%= video.title %>">
                      <i class="bi bi-trash"></i>
                    </button>
                  </div>
                </div>
              </div>
            </div>
          <% }); %>
        </div>
      <% } %>
    </div>
  </div>

  <!-- Upload Modal -->
  <div class="modal fade" id="uploadModal" tabindex="-1">
    <div class="modal-dialog modal-lg">
      <div class="modal-content" style="border-radius: 16px; border: none;">
        <div class="modal-header" style="border-bottom: 1px solid var(--border-color);">
          <h5 class="modal-title" style="font-weight: 700;">
            <i class="bi bi-cloud-upload text-primary"></i> Upload Video
          </h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
        </div>
        <div class="modal-body" style="padding: 30px;">
          <form id="uploadForm" enctype="multipart/form-data">
            <input type="hidden" name="_csrf" value="<%= typeof csrfToken !== 'undefined' ? csrfToken : '' %>">
            
            <div class="mb-4">
              <label class="form-label">Video File <span class="text-danger">*</span></label>
              <input type="file" class="form-control" name="video" accept="video/*" required>
              <div class="form-text">
                <i class="bi bi-info-circle"></i> Maximum file size: 5GB
              </div>
            </div>

            <div class="mb-4">
              <label class="form-label">Title <span class="text-danger">*</span></label>
              <input type="text" class="form-control" name="title" required placeholder="Enter video title">
            </div>

            <div class="mb-4">
              <label class="form-label">Description</label>
              <textarea class="form-control" name="description" rows="3" placeholder="Enter video description"></textarea>
            </div>

            <div class="row g-3 mb-4">
              <div class="col-md-6">
                <label class="form-label">Channel <span class="text-danger">*</span></label>
                <select class="form-control" name="channelId" required>
                  <option value="">Select a channel</option>
                  <% if (typeof channels !== 'undefined') { %>
                    <% channels.forEach(channel => { %>
                      <option value="<%= channel._id %>"><%= channel.channelName %></option>
                    <% }); %>
                  <% } %>
                </select>
              </div>

              <div class="col-md-6">
                <label class="form-label">Loop Count</label>
                <input type="number" class="form-control" name="loopCount" value="1" min="1" max="100">
                <div class="form-text">How many times to loop during stream</div>
              </div>
            </div>

            <div class="mb-4">
              <label class="form-label">Thumbnail Image</label>
              <input type="file" class="form-control" name="thumbnail" accept="image/*">
              <div class="form-text">
                <i class="bi bi-info-circle"></i> Upload a custom thumbnail for YouTube livestream (recommended: 1280x720)
              </div>
            </div>

            <div class="d-grid">
              <button type="submit" class="btn btn-primary btn-lg">
                <i class="bi bi-cloud-upload"></i> Upload Video
              </button>
            </div>

            <!-- Progress Bar -->
            <div id="uploadProgress" class="mt-3" style="display: none;">
              <div class="progress" style="height: 25px;">
                <div id="uploadProgressBar" class="progress-bar progress-bar-striped progress-bar-animated" role="progressbar" style="width: 0%">0%</div>
              </div>
              <small class="text-muted mt-2 d-block" id="uploadProgressText">Preparing upload...</small>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>

  <!-- Download from URL Modal -->
  <div class="modal fade" id="downloadUrlModal" tabindex="-1">
    <div class="modal-dialog modal-lg">
      <div class="modal-content" style="border-radius: 16px; border: none;">
        <div class="modal-header" style="border-bottom: 1px solid var(--border-color);">
          <h5 class="modal-title" style="font-weight: 700;">
            <i class="bi bi-link-45deg text-primary"></i> Download Video from URL
          </h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
        </div>
        <div class="modal-body" style="padding: 30px;">
          <form id="downloadUrlForm">
            <input type="hidden" name="_csrf" value="<%= typeof csrfToken !== 'undefined' ? csrfToken : '' %>">
            
            <div class="mb-4">
              <label class="form-label">Video URL <span class="text-danger">*</span></label>
              <input type="url" class="form-control" name="url" required placeholder="https://example.com/video.mp4 or Google Drive link">
              <div class="form-text">
                <i class="bi bi-info-circle"></i> Supports direct video links and Google Drive share links
              </div>
            </div>

            <div class="mb-4">
              <label class="form-label">Title <span class="text-danger">*</span></label>
              <input type="text" class="form-control" name="title" required placeholder="Enter video title">
            </div>

            <div class="mb-4">
              <label class="form-label">Description</label>
              <textarea class="form-control" name="description" rows="3" placeholder="Enter video description"></textarea>
            </div>

            <div class="row g-3 mb-4">
              <div class="col-md-6">
                <label class="form-label">Channel <span class="text-danger">*</span></label>
                <select class="form-control" name="channelId" required>
                  <option value="">Select a channel</option>
                  <% if (typeof channels !== 'undefined') { %>
                    <% channels.forEach(channel => { %>
                      <option value="<%= channel._id %>"><%= channel.channelName %></option>
                    <% }); %>
                  <% } %>
                </select>
              </div>

              <div class="col-md-6">
                <label class="form-label">Loop Count</label>
                <input type="number" class="form-control" name="loopCount" value="1" min="1" max="100">
                <div class="form-text">How many times to loop during stream</div>
              </div>
            </div>

            <div class="mb-4">
              <label class="form-label">Thumbnail Image</label>
              <input type="file" class="form-control" name="thumbnail" accept="image/*">
              <div class="form-text">
                <i class="bi bi-info-circle"></i> Upload a custom thumbnail for YouTube livestream (recommended: 1280x720)
              </div>
            </div>

            <div class="d-grid">
              <button type="submit" class="btn btn-primary btn-lg">
                <i class="bi bi-download"></i> Download Video
              </button>
            </div>

            <!-- Progress Bar -->
            <div id="downloadProgress" class="mt-3" style="display: none;">
              <div class="progress" style="height: 25px;">
                <div id="downloadProgressBar" class="progress-bar progress-bar-striped progress-bar-animated" role="progressbar" style="width: 0%">0%</div>
              </div>
              <small class="text-muted mt-2 d-block" id="downloadProgressText">Starting download...</small>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>

  <!-- Edit Modal -->
  <div class="modal fade" id="editModal" tabindex="-1">
    <div class="modal-dialog modal-lg">
      <div class="modal-content" style="border-radius: 16px; border: none;">
        <div class="modal-header" style="border-bottom: 1px solid var(--border-color);">
          <h5 class="modal-title" style="font-weight: 700;">
            <i class="bi bi-pencil text-primary"></i> Edit Video
          </h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
        </div>
        <div class="modal-body" style="padding: 30px;">
          <form id="editForm" enctype="multipart/form-data">
            <input type="hidden" id="editVideoId" name="videoId">
            
            <div class="mb-4">
              <label class="form-label">Title <span class="text-danger">*</span></label>
              <input type="text" class="form-control" id="editTitle" name="title" required placeholder="Enter video title">
            </div>

            <div class="mb-4">
              <label class="form-label">Description</label>
              <textarea class="form-control" id="editDescription" name="description" rows="3" placeholder="Enter video description"></textarea>
            </div>

            <div class="row g-3 mb-4">
              <div class="col-md-6">
                <label class="form-label">Channel</label>
                <select class="form-control" id="editChannelId" name="channelId">
                  <option value="">Keep current channel</option>
                  <% if (typeof channels !== 'undefined') { %>
                    <% channels.forEach(channel => { %>
                      <option value="<%= channel._id %>"><%= channel.channelName %></option>
                    <% }); %>
                  <% } %>
                </select>
              </div>

              <div class="col-md-6">
                <label class="form-label">Loop Count</label>
                <input type="number" class="form-control" id="editLoopCount" name="loopCount" value="1" min="1" max="100">
                <div class="form-text">How many times to loop during stream</div>
              </div>
            </div>

            <div class="mb-4">
              <label class="form-label">Thumbnail Image</label>
              <input type="file" class="form-control" id="editThumbnail" name="thumbnail" accept="image/*">
              <div class="form-text">
                <i class="bi bi-info-circle"></i> Upload a custom thumbnail for YouTube livestream (recommended: 1280x720)
              </div>
              <div id="editCurrentThumbnail" class="mt-2"></div>
            </div>

            <div class="d-grid">
              <button type="submit" class="btn btn-primary btn-lg">
                <i class="bi bi-check-circle"></i> Save Changes
              </button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  <script>
    // Check for active downloads on page load
    (function checkActiveDownloads() {
      const activeJobId = localStorage.getItem('activeDownloadJobId');
      if (activeJobId) {
        // Check if job is still active
        fetch(`/api/videos/download-status/${activeJobId}`)
          .then(res => res.json())
          .then(data => {
            if (data.success && (data.state === 'waiting' || data.state === 'active')) {
              // Resume monitoring
              showActiveDownload(activeJobId, data.progress);
            } else {
              // Job completed or failed, clear storage
              localStorage.removeItem('activeDownloadJobId');
            }
          })
          .catch(err => {
            console.error('Error checking active download:', err);
            localStorage.removeItem('activeDownloadJobId');
          });
      }
    })();

    function showActiveDownload(jobId, initialProgress) {
      const activeDownloads = document.getElementById('activeDownloads');
      const activeDownloadsList = document.getElementById('activeDownloadsList');
      
      activeDownloads.style.display = 'block';
      
      const downloadItem = document.createElement('div');
      downloadItem.id = `download-${jobId}`;
      downloadItem.innerHTML = `
        <div class="mb-2">
          <small class="text-muted">Downloading video...</small>
        </div>
        <div class="progress mb-2" style="height: 25px;">
          <div class="progress-bar progress-bar-striped progress-bar-animated" 
               role="progressbar" 
               style="width: ${initialProgress?.percent || 0}%">
            ${initialProgress?.percent || 0}%
          </div>
        </div>
        <small class="text-muted" id="progress-text-${jobId}">Connecting...</small>
      `;
      
      activeDownloadsList.appendChild(downloadItem);
      
      // Connect to SSE
      const eventSource = new EventSource(`/api/videos/download-progress/${jobId}`);
      
      eventSource.onmessage = function(event) {
        const progress = JSON.parse(event.data);
        const progressBar = downloadItem.querySelector('.progress-bar');
        const progressText = document.getElementById(`progress-text-${jobId}`);
        
        if (progress.state === 'completed') {
          progressBar.style.width = '100%';
          progressBar.textContent = '100%';
          progressText.textContent = 'Download complete! Reloading...';
          eventSource.close();
          localStorage.removeItem('activeDownloadJobId');
          setTimeout(() => window.location.reload(), 1000);
          return;
        }
        
        if (progress.state === 'failed') {
          progressText.textContent = 'Download failed';
          eventSource.close();
          localStorage.removeItem('activeDownloadJobId');
          return;
        }
        
        const percent = progress.percent || 0;
        progressBar.style.width = percent + '%';
        progressBar.textContent = percent + '%';
        
        const loadedMB = (progress.loaded / 1024 / 1024).toFixed(2);
        const totalMB = progress.total ? (progress.total / 1024 / 1024).toFixed(2) : '?';
        const speedMBps = (progress.speed / 1024 / 1024).toFixed(2);
        
        progressText.textContent = `${loadedMB} MB / ${totalMB} MB | ${speedMBps} MB/s`;
      };
      
      eventSource.onerror = function() {
        console.error('SSE connection error');
      };
    }

    // Edit video function
    async function editVideo(id) {
      console.log('Edit video clicked, ID:', id);
      try {
        // Fetch video details
        console.log('Fetching video details from:', `/api/videos/${id}`);
        const response = await fetch(`/api/videos/${id}`);
        console.log('Response status:', response.status);
        const data = await response.json();
        console.log('Response data:', data);
        
        if (data.success) {
          // Populate the edit form
          document.getElementById('editVideoId').value = data.video.id;
          document.getElementById('editTitle').value = data.video.title;
          document.getElementById('editDescription').value = data.video.description || '';
          document.getElementById('editLoopCount').value = data.video.loopCount || 1;
          document.getElementById('editChannelId').value = data.video.channelId || '';
          
          // Show current thumbnail if exists
          const thumbnailDiv = document.getElementById('editCurrentThumbnail');
          if (data.video.thumbnailPath) {
            thumbnailDiv.innerHTML = `<small class="text-muted">Current thumbnail:</small><br><img src="${data.video.thumbnailPath}" style="max-width: 200px; border-radius: 8px;" class="mt-2">`;
          } else {
            thumbnailDiv.innerHTML = '<small class="text-muted">No thumbnail uploaded</small>';
          }
          
          console.log('Form populated, showing modal');
          // Show the modal
          const editModal = new bootstrap.Modal(document.getElementById('editModal'));
          editModal.show();
        } else {
          console.error('Failed to load video details:', data);
          alert('Failed to load video details: ' + (data.errors ? data.errors.join(', ') : 'Unknown error'));
        }
      } catch (error) {
        console.error('Error in editVideo:', error);
        alert('Error loading video: ' + error.message);
      }
    }

    // Delete video function
    function deleteVideo(id, title) {
      if (!confirm(`Are you sure you want to delete "${title}"?`)) {
        return;
      }
      
      fetch(`/api/videos/${id}`, {
        method: 'DELETE',
        headers: {
          'Content-Type': 'application/json',
          <% if (typeof csrfToken !== 'undefined' && csrfToken) { %>
          'CSRF-Token': '<%= csrfToken %>'
          <% } %>
        }
      })
      .then(res => res.json())
      .then(data => {
        if (data.success) {
          window.location.reload();
        } else {
          alert('Failed to delete video: ' + (data.error || 'Unknown error'));
        }
      })
      .catch(error => {
        alert('Error deleting video: ' + error.message);
      });
    }

    // Attach event listeners to edit buttons
    document.addEventListener('DOMContentLoaded', function() {
      document.querySelectorAll('.edit-video-btn').forEach(btn => {
        btn.addEventListener('click', function() {
          const videoId = this.dataset.videoId;
          editVideo(videoId);
        });
      });

      // Attach event listeners to delete buttons
      document.querySelectorAll('.delete-video-btn').forEach(btn => {
        btn.addEventListener('click', function() {
          const videoId = this.dataset.videoId;
          const videoTitle = this.dataset.videoTitle;
          deleteVideo(videoId, videoTitle);
        });
      });
    });

    // Upload form handler
    document.getElementById('uploadForm').addEventListener('submit', async function(e) {
      e.preventDefault();
      
      const formData = new FormData(this);
      const btn = this.querySelector('button[type="submit"]');
      const originalHTML = btn.innerHTML;
      const progressDiv = document.getElementById('uploadProgress');
      const progressBar = document.getElementById('uploadProgressBar');
      const progressText = document.getElementById('uploadProgressText');
      
      btn.disabled = true;
      btn.innerHTML = '<span class="spinner-border spinner-border-sm me-2"></span>Uploading...';
      progressDiv.style.display = 'block';

      const xhr = new XMLHttpRequest();

      // Upload progress
      xhr.upload.addEventListener('progress', function(e) {
        if (e.lengthComputable) {
          const percentComplete = Math.round((e.loaded / e.total) * 100);
          progressBar.style.width = percentComplete + '%';
          progressBar.textContent = percentComplete + '%';
          
          const loadedMB = (e.loaded / 1024 / 1024).toFixed(2);
          const totalMB = (e.total / 1024 / 1024).toFixed(2);
          progressText.textContent = `Uploading: ${loadedMB} MB / ${totalMB} MB`;
        }
      });

      // Handle completion
      xhr.addEventListener('load', function() {
        if (xhr.status === 201 || xhr.status === 200) {
          try {
            const data = JSON.parse(xhr.responseText);
            if (data.success) {
              progressText.textContent = 'Upload complete! Reloading...';
              setTimeout(() => window.location.reload(), 500);
            } else {
              const errorMsg = data.errors ? data.errors.join(', ') : (data.error || 'Unknown error');
              alert('Upload failed: ' + errorMsg);
              btn.innerHTML = originalHTML;
              btn.disabled = false;
              progressDiv.style.display = 'none';
            }
          } catch (e) {
            alert('Server returned invalid response');
            btn.innerHTML = originalHTML;
            btn.disabled = false;
            progressDiv.style.display = 'none';
          }
        } else {
          alert('Upload failed with status: ' + xhr.status);
          btn.innerHTML = originalHTML;
          btn.disabled = false;
          progressDiv.style.display = 'none';
        }
      });

      // Handle errors
      xhr.addEventListener('error', function() {
        alert('Error uploading video');
        btn.innerHTML = originalHTML;
        btn.disabled = false;
        progressDiv.style.display = 'none';
      });

      // Send request
      const csrfToken = document.querySelector('input[name="_csrf"]').value;
      xhr.open('POST', '/api/videos/upload');
      xhr.setRequestHeader('X-CSRF-Token', csrfToken);
      xhr.send(formData);
    });

    // Download from URL form handler
    document.getElementById('downloadUrlForm').addEventListener('submit', async function(e) {
      e.preventDefault();
      
      const formData = new FormData(this);
      const btn = this.querySelector('button[type="submit"]');
      const originalHTML = btn.innerHTML;
      const progressDiv = document.getElementById('downloadProgress');
      const progressBar = document.getElementById('downloadProgressBar');
      const progressText = document.getElementById('downloadProgressText');
      
      btn.disabled = true;
      btn.innerHTML = '<span class="spinner-border spinner-border-sm me-2"></span>Starting...';
      progressDiv.style.display = 'block';

      try {
        const csrfToken = document.querySelector('#downloadUrlForm input[name="_csrf"]').value;

        // Start download job
        const response = await fetch('/api/videos/download-url', {
          method: 'POST',
          headers: {
            'X-CSRF-Token': csrfToken
          },
          body: formData
        });

        const data = await response.json();
        
        if (!data.success) {
          const errorMsg = data.errors ? data.errors.join(', ') : (data.error || 'Unknown error');
          alert('Download failed: ' + errorMsg);
          btn.innerHTML = originalHTML;
          btn.disabled = false;
          progressDiv.style.display = 'none';
          return;
        }

        // Job started, connect to SSE for progress
        const jobId = data.jobId;
        
        // Store job ID in localStorage
        localStorage.setItem('activeDownloadJobId', jobId);
        
        // Close modal and show in active downloads
        const modal = bootstrap.Modal.getInstance(document.getElementById('downloadUrlModal'));
        if (modal) modal.hide();
        
        showActiveDownload(jobId, { loaded: 0, total: 0, percent: 0, speed: 0 });
        
      } catch (error) {
        alert('Error starting download: ' + error.message);
        btn.innerHTML = originalHTML;
        btn.disabled = false;
        progressDiv.style.display = 'none';
      }
    });

    // Edit form handler
    document.getElementById('editForm').addEventListener('submit', async function(e) {
      e.preventDefault();
      
      const videoId = document.getElementById('editVideoId').value;
      const formData = new FormData(this);
      
      const btn = this.querySelector('button[type="submit"]');
      const originalHTML = btn.innerHTML;
      
      btn.disabled = true;
      btn.innerHTML = '<span class="spinner-border spinner-border-sm me-2"></span>Saving...';

      try {
        const csrfToken = '<%= typeof csrfToken !== "undefined" ? csrfToken : "" %>';
        const response = await fetch(`/api/videos/${videoId}`, {
          method: 'PUT',
          headers: {
            'X-CSRF-Token': csrfToken
          },
          body: formData
        });

        const data = await response.json();
        
        if (data.success) {
          window.location.reload();
        } else {
          const errorMsg = data.errors ? data.errors.join(', ') : (data.error || 'Unknown error');
          alert('Update failed: ' + errorMsg);
          btn.innerHTML = originalHTML;
          btn.disabled = false;
        }
      } catch (error) {
        alert('Error updating video: ' + error.message);
        btn.innerHTML = originalHTML;
        btn.disabled = false;
      }
    });
  </script>
  <%- include('partials/footer') %>
</body>
</html>
