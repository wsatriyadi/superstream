<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="icon" type="image/png" href="/favicon.png">
  <title><%= title %></title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
  <link rel="stylesheet" href="/css/custom.css">
  <style>
    .live-indicator {
      animation: pulse 2s infinite;
    }
    @keyframes pulse {
      0%, 100% { opacity: 1; }
      50% { opacity: 0.5; }
    }
  </style>
</head>
<body>
  <% 
    const activePage = 'live';
    const pageTitle = 'Live Streams';
    const formatDuration = (seconds) => {
      if (!seconds) return '0:00';
      const hours = Math.floor(seconds / 3600);
      const minutes = Math.floor((seconds % 3600) / 60);
      const secs = seconds % 60;
      if (hours > 0) {
        return `${hours}:${minutes.toString().padStart(2, '0')}:${secs.toString().padStart(2, '0')}`;
      }
      return `${minutes}:${secs.toString().padStart(2, '0')}`;
    };
  %>

  <%- include('partials/sidebar', { activePage, activeStreams: typeof streams !== 'undefined' ? streams.length : 0 }) %>

  <div class="main-content">
    <%- include('partials/topbar', { pageTitle, user }) %>

    <div class="content-container">
      <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
          <p class="text-muted mb-0">Monitor your active livestreams in real-time</p>
        </div>
        <button class="btn btn-outline-primary" onclick="refreshStreams()">
          <i class="bi bi-arrow-clockwise"></i> Refresh
        </button>
      </div>

      <% if (typeof streams !== 'undefined' && streams.length === 0) { %>
        <div class="card shadow-sm" style="border-radius: 16px; border: none;">
          <div class="card-body">
            <div class="empty-state">
              <div class="empty-state-icon">
                <i class="bi bi-broadcast-pin"></i>
              </div>
              <h3 class="empty-state-title">No Active Streams</h3>
              <p class="empty-state-text">Your livestreams will appear here when they start</p>
              <div class="mt-4">
                <a href="/channels" class="btn btn-outline-primary me-2">
                  <i class="bi bi-collection-play"></i> Manage Channels
                </a>
                <a href="/videos" class="btn btn-outline-primary">
                  <i class="bi bi-film"></i> Upload Videos
                </a>
              </div>
            </div>
          </div>
        </div>
      <% } else if (typeof streams !== 'undefined') { %>
        <!-- Active Streams Stats -->
        <div class="row g-4 mb-4">
          <div class="col-md-4">
            <div class="card shadow-sm" style="border-radius: 16px; border: none;">
              <div class="card-body" style="padding: 24px;">
                <div class="d-flex justify-content-between align-items-start">
                  <div>
                    <div class="stat-label">Active Streams</div>
                    <div class="stat-value"><%= streams.length %></div>
                  </div>
                  <div class="stat-icon danger">
                    <i class="bi bi-broadcast live-indicator"></i>
                  </div>
                </div>
              </div>
            </div>
          </div>

          <div class="col-md-4">
            <div class="card shadow-sm" style="border-radius: 16px; border: none;">
              <div class="card-body" style="padding: 24px;">
                <div class="d-flex justify-content-between align-items-start">
                  <div>
                    <div class="stat-label">Total Viewers</div>
                    <div class="stat-value"><%= streams.reduce((sum, s) => sum + (s.viewerCount || 0), 0) %></div>
                  </div>
                  <div class="stat-icon info">
                    <i class="bi bi-eye-fill"></i>
                  </div>
                </div>
              </div>
            </div>
          </div>

          <div class="col-md-4">
            <div class="card shadow-sm" style="border-radius: 16px; border: none;">
              <div class="card-body" style="padding: 24px;">
                <div class="d-flex justify-content-between align-items-start">
                  <div>
                    <div class="stat-label">Channels Streaming</div>
                    <div class="stat-value"><%= new Set(streams.map(s => s.channelId)).size %></div>
                  </div>
                  <div class="stat-icon success">
                    <i class="bi bi-collection-play"></i>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>

        <!-- Stream Cards -->
        <div class="row g-4">
          <% streams.forEach((stream, index) => { %>
            <div class="col-xl-4 col-lg-6">
              <div class="card shadow-sm fade-in" style="border-radius: 16px; border: none; animation-delay: <%= index * 0.1 %>s;">
                <% if (stream.video && stream.video.thumbnailPath) { %>
                  <div style="position: relative;">
                    <img src="<%= stream.video.thumbnailPath %>" class="card-img-top" alt="<%= stream.video.title %>" style="height: 200px; object-fit: cover; border-radius: 16px 16px 0 0;">
                    <span class="badge bg-danger live-indicator" style="position: absolute; top: 12px; right: 12px; font-size: 12px; padding: 6px 12px;">
                      <i class="bi bi-circle-fill" style="font-size: 8px;"></i> LIVE
                    </span>
                  </div>
                <% } else { %>
                  <div class="d-flex align-items-center justify-content-center" style="height: 200px; background: linear-gradient(135deg, rgba(239, 68, 68, 0.1), rgba(220, 38, 38, 0.05)); border-radius: 16px 16px 0 0; position: relative;">
                    <i class="bi bi-broadcast" style="font-size: 48px; color: var(--danger-color);"></i>
                    <span class="badge bg-danger live-indicator" style="position: absolute; top: 12px; right: 12px; font-size: 12px; padding: 6px 12px;">
                      <i class="bi bi-circle-fill" style="font-size: 8px;"></i> LIVE
                    </span>
                  </div>
                <% } %>
                
                <div class="card-body" style="padding: 24px;">
                  <h6 class="mb-2" style="font-weight: 700; color: var(--dark-bg);"><%= stream.video ? stream.video.title : 'Untitled Stream' %></h6>
                  
                  <div class="d-flex align-items-center gap-2 mb-3">
                    <% if (stream.channel && stream.channel.thumbnailUrl) { %>
                      <img src="<%= stream.channel.thumbnailUrl %>" class="rounded-circle" width="24" height="24" alt="<%= stream.channel.channelName %>">
                    <% } %>
                    <small class="text-muted"><%= stream.channel ? stream.channel.channelName : 'Unknown Channel' %></small>
                  </div>

                  <div class="row g-2 mb-3">
                    <div class="col-6">
                      <div class="p-2 rounded text-center" style="background: #f8fafc;">
                        <small class="text-muted d-block" style="font-size: 11px;">Duration</small>
                        <strong style="font-size: 14px; color: var(--dark-bg);">
                          <%= stream.startedAt ? formatDuration(Math.floor((Date.now() - new Date(stream.startedAt)) / 1000)) : '0:00' %>
                        </strong>
                      </div>
                    </div>
                    <div class="col-6">
                      <div class="p-2 rounded text-center" style="background: #f8fafc;">
                        <small class="text-muted d-block" style="font-size: 11px;">Viewers</small>
                        <strong style="font-size: 14px; color: var(--dark-bg);"><%= stream.viewerCount || 0 %></strong>
                      </div>
                    </div>
                  </div>

                  <div class="d-flex gap-2">
                    <% if (stream.broadcastId) { %>
                      <a href="https://youtube.com/watch?v=<%= stream.broadcastId %>" target="_blank" class="btn btn-sm btn-outline-primary flex-grow-1">
                        <i class="bi bi-youtube"></i> Watch
                      </a>
                    <% } %>
                    <button class="btn btn-sm btn-outline-danger" onclick="stopStream('<%= stream._id %>')">
                      <i class="bi bi-stop-circle"></i> Stop
                    </button>
                  </div>

                  <small class="text-muted d-block mt-3" style="font-size: 11px;">
                    <i class="bi bi-clock"></i> Started: <%= stream.startedAt ? new Date(stream.startedAt).toLocaleTimeString() : 'Unknown' %>
                  </small>
                </div>
              </div>
            </div>
          <% }); %>
        </div>
      <% } %>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  <script>
    function refreshStreams() {
      window.location.reload();
    }

    function stopStream(streamId) {
      if (!confirm('Are you sure you want to stop this stream?')) {
        return;
      }

      fetch(`/api/streams/stop/${streamId}`, {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json',
          <% if (typeof csrfToken !== 'undefined' && csrfToken) { %>
          'CSRF-Token': '<%= csrfToken %>'
          <% } %>
        }
      })
      .then(res => res.json())
      .then(data => {
        if (data.success) {
          window.location.reload();
        } else {
          alert('Failed to stop stream: ' + (data.error || 'Unknown error'));
        }
      })
      .catch(error => {
        alert('Error stopping stream: ' + error.message);
      });
    }

    // Auto-refresh every 30 seconds
    setInterval(() => {
      window.location.reload();
    }, 30000);
  </script>
  <%- include('partials/footer') %>
</body>
</html>
